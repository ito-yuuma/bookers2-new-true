<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

        <h2>User info</h2>

        <%= image_tag @user.get_profile_image(100,100) %>

        <table class="table">

          <p>name</p>

          <%= @user.name %>

          <p>introduction</p>

          <%= @user.introduction %>

        </table>

        <div class="row">
            <%= link_to editer_path(@user), class: "btn btn-outline-secondary btn-block ", method: :get do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
        </div>


        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <div class="form-group">
             <p>Title</p>
             <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          <div class="form-group">
             <p>Opinion</p>
             <%= f.text_area :body, class: "form-control book_body", id: "book_body"  %>
          </div>
          <div class="form-group">
             <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>

    </div>

    <div class="col-md-8 offset-md-1">

        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <p>Title</p>

          <p>Opinion</p>


            <% @books.each do |book| %>
              <div class="book-comment">
                  <span class="book-user-image"><%= image_tag book.user.get_profile_image(100,100) %></span>
                  <span class="book-body"><%= link_to book.title, book_path(book.id)  %></span>
                  <span class="book-title"><%= book.body %></span>
              </div>
            <% end %>
        </table>

    </div>
  </div>
</div>
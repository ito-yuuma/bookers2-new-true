<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>

        <table class="table ">
          <tbody>
            <tr>
              <th><p class="name">name</p></th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th><p class="intro">introduction</p></th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block", method: :get do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
        </div>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: '/books/:id', method: :post do |f| %>
          <div class="form-group">
             <p>Title</p>
             <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          <div class="form-group">
             <p>Opinion</p>
             <%= f.text_area :body, class: "form-control book_body", id: "book_body"  %>
          </div>
          <div class="form-group">
             <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th><p>image</p></th>
            <th><p>name</p></th>
            <th></th>
          </tr>
        </thead>

        <div>
          <% @users.each do |user| %>
          <tbody>
            <tr>
            <div class="user-comment">
                <td><span><%= image_tag user.get_profile_image(50,50) %></span></td>
                <td><span><%= user.name  %></span></td>
                <td><span><%= link_to 'Show', user_path(user.id)  %></span></td>
            </div>
            </tr>
          </tbody>
          <% end %>
        </div>
      </table>

    </div>
  </div>
</div>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

        <h2>User info</h2>

        <%= image_tag @user.get_profile_image(100,100) %>

        <table class="table">
          <tbody>
            <tr>
            <th><p>name</p></th>
            <th><%= @user.name %></th>
            </tr>
            <tr>
            <th><p>introduction</p></th>
            <th><%= @user.introduction %></th>
            </tr>



          </tbody>
        </table>

        <div class="row">
            <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block ", method: :get do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
        </div>


        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <div class="form-group">
             <p>Title</p>
             <%= f.text_field :title, class: "form-control book_title" %>
          </div>
          <div class="form-group">
             <p>Opinion</p>
             <%= f.text_area :body, class: "form-control book_body", id: "book_body"  %>
          </div>
          <div class="form-group">
             <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>

    </div>

    <div class="col-md-8 offset-md-1">

        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th><p>Title</p></th>
              <th><p>Opinion</p></th>
            </tr>
          </thead>

        <% @books.each do |book| %>
          <tbody>
            <tr>
              <div class="book-comment">
                  <td><span>
                    <%= link_to user_path(book.user.id) do %>
                    <%= image_tag book.user.get_profile_image(50,50) %>
                    <% end %>
                  </span></td>
                  <td><span><%= link_to book.title, book_path(book.id)  %></span></td>
                  <td><span><%= book.body %></span></td>
              </div>
            </tr>

          </tbody>
        <% end %>
        </table>

    </div>
  </div>
</div>